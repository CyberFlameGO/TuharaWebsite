{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "types": ["astro/client", "unplugin-icons/types/astro"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    },
    "verbatimModuleSyntax": true
  }
}
